<div class="container py-3">
  <div class="card mb-3 p-3">
    <div class="d-flex align-items-end pb-2">
      <h1 class="mb-0"><%= @restaurant.name %></h1>
      <p class="mb-0 pl-3"><%= @restaurant.category %></p>
    </div>
    <div class="d-flex flex-column">
      <p><i class="fas fa-map-pin pr-2"></i></i><%= @restaurant.address %></p>
      <p><i class="fas fa-phone pr-2"></i><%= @restaurant.phone_number %></p>
    </div>
    <h3>Reviews</h3>
    <div class="d-flex">
      <ul class="list-unstyled">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-item">
          <div class="d-flex flex-column">
            <i class="far fa-star pb-1"> <%= review.rating%></i>
            <p><%= review.content %></p>
          </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="container py-3">
      <h5>Add your review below</h5>
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>    
  </div>
</div>